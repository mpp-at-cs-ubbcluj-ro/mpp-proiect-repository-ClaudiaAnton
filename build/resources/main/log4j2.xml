<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
    <Appenders>
<!--        <Console name="Console" target="SYSTEM_OUT">-->

<!--            &lt;!&ndash; Flow tracing is most useful with a pattern that shows location.-->
<!--                 Below pattern outputs class, line number and method name. &ndash;&gt;-->
<!--            <PatternLayout pattern="%d{DATE} %-5level %class{36} %L %M - %msg%n"/>-->
<!--        </Console>-->
        <File name="log" fileName="target/jurnal.log" append="true">
            <PatternLayout pattern="%d{DATE} %-5level %class{36} %L %M - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="log"/>
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>